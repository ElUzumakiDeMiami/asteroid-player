
{
  "name": "asteroid-music",
  "productName": "Asteroid Music Player",
  "version": "1.0.0",
  "description": "A premium, offline-first music player",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:win": "cmd /c \"npm run build && electron-builder\""
  },
  "keywords": [
    "music",
    "player",
    "react",
    "electron",
    "pwa"
  ],
  "author": {
    "name": "Asteroid Music",
    "email": "youremail@example.com"
  },
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@google/genai": "^1.30.0",
    "@hello-pangea/dnd": "^16.5.0",
    "jsmediatags": "^3.9.5",
    "lucide-react": "^0.554.0",
    "node-id3": "^0.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-window": "^1.8.10",
    "react-virtualized-auto-sizer": "^1.0.24",
    "wouter": "^3.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "@types/react-window": "^1.8.8",
    "@types/react-virtualized-auto-sizer": "^1.0.4"
  },
  "build": {
    "appId": "com.asteroid.musicplayer",
    "productName": "Asteroid Music",
    "extends": null,
    "files": [
      "build/**/*",
      "electron.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png",
      "category": "Audio"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
